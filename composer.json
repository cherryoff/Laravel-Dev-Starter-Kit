{
	"name": "cherryoff/Laravel-Dev-Starter-Kit",
	"description": "Laravel Dev Starter Kit.",
	"keywords": ["framework", "laravel", "bower", "grunt", "less"],
	"license": "MIT",
    "authors": [
        {
            "name": "Nick Wishnyakov",
            "homepage": "http://www.wishnyakov.ru"
        }
    ],
	"require": {
		"laravel/framework": "4.2.*",
        "slushie/laravel-assetic": "dev-master",
        "leafo/lessphp": "dev-master",
        "lmammino/jsmin4assetic": "1.0.*",
        "natxet/CssMin": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled",
            "if [ -d \"public/css/\" ] \nthen \nrm -rf public/css/*.css \nfi",
            "if [ -d \"public/js/\" ] \nthen \nrm -rf public/js/*.js \nfi",
            "php artisan asset:warm"
        ],
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "if [ -d \"public/css/\" ] \nthen \nrm -rf public/css/*.css \nfi",
            "if [ -d \"public/js/\" ] \nthen \nrm -rf public/js/*.js \nfi",
            "php artisan asset:warm"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
